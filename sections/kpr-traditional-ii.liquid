<!-- sections/kpr-traditional-ii.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-traditional-ii"
  data-concept="traditional"
  class="kpr-concept-section kpr-traditional-section kpr-traditional-bestsellers color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid bestsellers-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge">
              <span>Best Seller</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="bestseller-badge">
                <span>Best Seller</span>
              </div>
              {% render 'product-card-placeholder' %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge">
              <span>Best Seller</span>
            </div>
            {% render 'product-card-placeholder' %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Best Sellers' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Traditional Best Sellers specific styling -->
  <style>
    .kpr-traditional-bestsellers {
      background: linear-gradient(135deg, #fff9e6 0%, #f0e6d2 100%);
      border-top: 3px solid #b8860b;
      position: relative;
    }

    .kpr-traditional-bestsellers::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #b8860b 0px,
        #b8860b 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-traditional-bestsellers .section-heading {
      color: #b8860b;
    }

    .kpr-traditional-bestsellers .section-heading::after {
      content: 'ðŸ‘‘';
    }

    .kpr-traditional-bestsellers .section-description {
      color: #8b6914;
    }

    .kpr-traditional-bestsellers .product-card-wrapper {
      position: relative;
    }

    .bestseller-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 10;
      background: linear-gradient(45deg, #b8860b, #daa520);
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(184, 134, 11, 0.3);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .kpr-traditional-bestsellers .product-card {
      border-color: #daa520;
      background: #fefef9;
    }

    .kpr-traditional-bestsellers .product-card:hover {
      border-color: #b8860b;
      box-shadow: 0 8px 24px rgba(184, 134, 11, 0.2);
    }

    .kpr-traditional-bestsellers .button--primary {
      background: linear-gradient(45deg, #b8860b, #daa520);
      border-color: #b8860b;
    }

    .kpr-traditional-bestsellers .button--primary:hover {
      background: linear-gradient(45deg, #996f09, #b8860b);
      border-color: #996f09;
    }

    .bestsellers-grid {
      position: relative;
    }

    .bestsellers-grid::before {
      content: 'âœ¨ Customer Favorites âœ¨';
      position: absolute;
      top: -40px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(45deg, #b8860b, #daa520);
      color: white;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(184, 134, 11, 0.3);
    }

    @media (max-width: 768px) {
      .bestsellers-grid::before {
        font-size: 0.8rem;
        padding: 6px 16px;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Traditional II - Best Sellers",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Traditional Best Sellers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our most beloved traditional designs, proven by thousands of satisfied customers worldwide."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Best Sellers"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Traditional II - Best Sellers"
    }
  ]
}
{% endschema %}
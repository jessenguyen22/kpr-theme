<!-- sections/kpr-hybrid-i.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-hybrid-i"
  data-concept="hybrid"
  class="kpr-concept-section kpr-hybrid-section color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="new-badge hybrid-badge">
              <span>New Hybrid</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="new-badge hybrid-badge">
                <span>New Hybrid</span>
              </div>
              {% render 'product-card-placeholder' %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="new-badge hybrid-badge">
              <span>New Hybrid</span>
            </div>
            {% render 'product-card-placeholder' %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Hybrid Products' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Hybrid concept specific styling -->
  <style>
    .kpr-hybrid-section {
      padding: var(--section-padding-top) 0 var(--section-padding-bottom);
      background: linear-gradient(135deg, #f0f8ff 0%, #e6f3ff 50%, #f0f0f8 100%);
      border-top: 3px solid #4a90e2;
      position: relative;
    }

    .kpr-hybrid-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #4a90e2 0px,
        #4a90e2 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-hybrid-section::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent 0%, #4a90e2 50%, transparent 100%);
      opacity: 0.3;
    }

    .kpr-hybrid-section .section-header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
    }

    .kpr-hybrid-section .section-heading {
      font-size: clamp(1.5rem, 3vw, 2.5rem);
      font-weight: 700;
      color: #4a90e2;
      margin: 0 0 1rem 0;
      background: linear-gradient(45deg, #4a90e2, #1e90ff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .kpr-hybrid-section .section-heading::after {
      content: 'âš¡';
      display: block;
      font-size: 2rem;
      margin: 0.5rem 0;
      -webkit-text-fill-color: #4a90e2;
    }

    .kpr-hybrid-section .section-description {
      color: #2c5aa0;
      font-size: 1.1rem;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .kpr-hybrid-section .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .kpr-hybrid-section .product-card-wrapper {
      position: relative;
    }

    .hybrid-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 10;
      background: linear-gradient(45deg, #4a90e2, #1e90ff);
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(74, 144, 226, 0.3);
      animation: glow 2s ease-in-out infinite alternate;
    }

    @keyframes glow {
      from { box-shadow: 0 2px 8px rgba(74, 144, 226, 0.3); }
      to { box-shadow: 0 2px 16px rgba(74, 144, 226, 0.6); }
    }

    .kpr-hybrid-section .product-card {
      background: linear-gradient(145deg, #ffffff, #f8fbff);
      border: 2px solid #b3d1ff;
      border-radius: 12px;
      box-shadow: 0 4px 12px rgba(74, 144, 226, 0.1);
      transition: all 0.3s ease;
      overflow: hidden;
      position: relative;
    }

    .kpr-hybrid-section .product-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(74, 144, 226, 0.1), transparent);
      transition: left 0.5s ease;
    }

    .kpr-hybrid-section .product-card:hover::before {
      left: 100%;
    }

    .kpr-hybrid-section .product-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 12px 32px rgba(74, 144, 226, 0.2);
      border-color: #4a90e2;
    }

    .kpr-hybrid-section .section-footer {
      text-align: center;
      margin-top: 3rem;
    }

    .kpr-hybrid-section .button--primary {
      background: linear-gradient(45deg, #4a90e2, #1e90ff);
      color: white;
      border: 2px solid #4a90e2;
      padding: 12px 24px;
      border-radius: 25px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .kpr-hybrid-section .button--primary:hover {
      background: linear-gradient(45deg, #3a7bc8, #1e90ff);
      border-color: #3a7bc8;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(74, 144, 226, 0.4);
    }

    @media (max-width: 768px) {
      .kpr-hybrid-section .products-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Hybrid I - New Products",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Hybrid Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience the perfect fusion of traditional craftsmanship and modern innovation in our newest hybrid designs."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Hybrid Products"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Hybrid I - New Products"
    }
  ]
}
{% endschema %}
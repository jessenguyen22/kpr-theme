<!-- sections/kpr-traditional-i.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-traditional-i"
  data-concept="traditional"
  class="kpr-concept-section kpr-traditional-section color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              {% render 'product-card-placeholder' %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            {% render 'product-card-placeholder' %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Traditional Products' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Traditional concept specific styling -->
  <style>
    .kpr-traditional-section {
      padding: var(--section-padding-top) 0 var(--section-padding-bottom);
      background: linear-gradient(135deg, #f5f3f0 0%, #ede8e0 100%);
      border-top: 3px solid #8b4513;
      position: relative;
    }

    .kpr-traditional-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #8b4513 0px,
        #8b4513 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-traditional-section .section-header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
    }

    .kpr-traditional-section .section-heading {
      font-size: clamp(1.5rem, 3vw, 2.5rem);
      font-weight: 700;
      color: #8b4513;
      margin: 0 0 1rem 0;
      font-family: serif;
      text-shadow: 1px 1px 2px rgba(139, 69, 19, 0.1);
    }

    .kpr-traditional-section .section-heading::after {
      content: 'üèõÔ∏è';
      display: block;
      font-size: 2rem;
      margin: 0.5rem 0;
    }

    .kpr-traditional-section .section-description {
      color: #6b4423;
      font-style: italic;
      font-size: 1.1rem;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .kpr-traditional-section .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .kpr-traditional-section .product-card {
      background: white;
      border: 2px solid #d4c4a8;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(139, 69, 19, 0.1);
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .kpr-traditional-section .product-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(139, 69, 19, 0.2);
      border-color: #8b4513;
    }

    .kpr-traditional-section .section-footer {
      text-align: center;
      margin-top: 3rem;
    }

    .kpr-traditional-section .button--primary {
      background: #8b4513;
      color: white;
      border: 2px solid #8b4513;
      padding: 12px 24px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .kpr-traditional-section .button--primary:hover {
      background: #6b3410;
      border-color: #6b3410;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
    }

    @media (max-width: 768px) {
      .kpr-traditional-section .products-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Traditional I - New Products",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Traditional Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our latest traditional designs that blend timeless craftsmanship with contemporary needs."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Traditional Products"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Traditional I - New Products"
    }
  ]
}
{% endschema %}
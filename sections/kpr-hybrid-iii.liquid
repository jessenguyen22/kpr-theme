<!-- sections/kpr-hybrid-iii.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-hybrid-iii"
  data-concept="hybrid"
  class="kpr-concept-section kpr-hybrid-section kpr-hybrid-recommended color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid recommended-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="recommended-badge hybrid-recommended">
              <span>Fusion Pick</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
            {% if section.settings.show_recommendation_reason %}
              <div class="recommendation-reason hybrid-reason">
                <strong>Perfect Fusion:</strong> Seamlessly blends traditional values with cutting-edge innovation
              </div>
            {% endif %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="recommended-badge hybrid-recommended">
                <span>Fusion Pick</span>
              </div>
              {% render 'product-card-placeholder' %}
              {% if section.settings.show_recommendation_reason %}
                <div class="recommendation-reason hybrid-reason">
                  <strong>Perfect Fusion:</strong> Seamlessly blends traditional values with cutting-edge innovation
                </div>
              {% endif %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="recommended-badge hybrid-recommended">
              <span>Fusion Pick</span>
            </div>
            {% render 'product-card-placeholder' %}
            {% if section.settings.show_recommendation_reason %}
              <div class="recommendation-reason hybrid-reason">
                <strong>Perfect Fusion:</strong> Seamlessly blends traditional values with cutting-edge innovation
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Hybrid Recommendations' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Hybrid Recommended specific styling -->
  <style>
    .kpr-hybrid-recommended {
      background: linear-gradient(135deg, #f8fcff 0%, #e8f4fd 50%, #fff8e1 100%);
      border-top: 3px solid #3498db;
      position: relative;
    }

    .kpr-hybrid-recommended::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #3498db 0px,
        #3498db 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-hybrid-recommended .section-heading {
      background: linear-gradient(45deg, #3498db, #f39c12, #9b59b6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      background-size: 200% 200%;
      animation: gradientShift 4s ease infinite;
    }

    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    .kpr-hybrid-recommended .section-heading::after {
      content: 'ðŸŒŸ';
      -webkit-text-fill-color: #3498db;
    }

    .kpr-hybrid-recommended .section-description {
      color: #2471a3;
    }

    .kpr-hybrid-recommended .product-card-wrapper {
      position: relative;
    }

    .hybrid-recommended {
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 10;
      background: linear-gradient(45deg, #3498db, #f39c12, #9b59b6);
      background-size: 300% 300%;
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(52, 152, 219, 0.3);
      animation: rainbowShift 3s ease infinite, bounce 2s ease-in-out infinite;
      transform: rotate(-8deg);
    }

    @keyframes rainbowShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes bounce {
      0%, 100% { transform: rotate(-8deg) translateY(0px); }
      50% { transform: rotate(-8deg) translateY(-2px); }
    }

    .kpr-hybrid-recommended .product-card {
      border: 2px solid transparent;
      background: linear-gradient(145deg, #ffffff, #f8fbff) padding-box,
                  linear-gradient(45deg, #3498db, #f39c12, #9b59b6) border-box;
      position: relative;
      overflow: hidden;
    }

    .kpr-hybrid-recommended .product-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(52, 152, 219, 0.1), rgba(243, 156, 18, 0.1), transparent);
      transition: left 0.7s ease;
    }

    .kpr-hybrid-recommended .product-card:hover::before {
      left: 100%;
    }

    .kpr-hybrid-recommended .product-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 12px 32px rgba(52, 152, 219, 0.25);
    }

    .hybrid-reason {
      background: linear-gradient(145deg, #f8fcff, #e3f2fd);
      border: 2px solid transparent;
      background-clip: padding-box;
      border-radius: 12px;
      padding: 12px;
      margin-top: 12px;
      font-size: 0.85rem;
      line-height: 1.4;
      color: #1565c0;
      position: relative;
      overflow: hidden;
    }

    .hybrid-reason::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, #3498db, #f39c12, #9b59b6);
      background-size: 300% 300%;
      animation: borderGlow 4s ease infinite;
      z-index: -1;
      margin: -2px;
      border-radius: 12px;
    }

    .hybrid-reason::after {
      content: '';
      position: absolute;
      top: 2px;
      left: 2px;
      right: 2px;
      bottom: 2px;
      background: linear-gradient(145deg, #f8fcff, #e3f2fd);
      border-radius: 10px;
      z-index: -1;
    }

    @keyframes borderGlow {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    .hybrid-reason strong {
      color: #3498db;
      display: block;
      margin-bottom: 4px;
    }

    .kpr-hybrid-recommended .button--primary {
      background: linear-gradient(45deg, #3498db, #f39c12);
      border-color: #3498db;
    }

    .kpr-hybrid-recommended .button--primary:hover {
      background: linear-gradient(45deg, #2980b9, #e67e22);
      border-color: #2980b9;
    }

    .recommended-grid {
      position: relative;
    }

    .recommended-grid::before {
      content: 'âš¡ Fusion Mastery âš¡';
      position: absolute;
      top: -40px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(45deg, #3498db, #f39c12, #9b59b6);
      background-size: 300% 300%;
      color: white;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
      animation: headerGlow 3s ease infinite;
    }

    @keyframes headerGlow {
      0%, 100% { 
        background-position: 0% 50%;
        box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
      }
      50% { 
        background-position: 100% 50%;
        box-shadow: 0 4px 20px rgba(243, 156, 18, 0.4);
      }
    }

    @media (max-width: 768px) {
      .recommended-grid::before {
        font-size: 0.8rem;
        padding: 6px 16px;
      }

      .hybrid-reason {
        font-size: 0.8rem;
        padding: 10px;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Hybrid III - Recommended",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hybrid Recommendations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Curated fusion designs that represent the pinnacle of hybrid philosophy - where tradition meets innovation."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_recommendation_reason",
      "label": "Show Recommendation Reason",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Hybrid Recommendations"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Hybrid III - Recommended"
    }
  ]
}
{% endschema %}
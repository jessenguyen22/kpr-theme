<!-- sections/kpr-hybrid-ii.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-hybrid-ii"
  data-concept="hybrid"
  class="kpr-concept-section kpr-hybrid-section kpr-hybrid-bestsellers color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid bestsellers-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge hybrid-bestseller">
              <span>Top Hybrid</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="bestseller-badge hybrid-bestseller">
                <span>Top Hybrid</span>
              </div>
              {% render 'product-card-placeholder' %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge hybrid-bestseller">
              <span>Top Hybrid</span>
            </div>
            {% render 'product-card-placeholder' %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Hybrid Best Sellers' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Hybrid Best Sellers specific styling -->
  <style>
    .kpr-hybrid-bestsellers {
      background: linear-gradient(135deg, #e8f4fd 0%, #f0f8ff 50%, #fff5e6 100%);
      border-top: 3px solid #2980b9;
      position: relative;
    }

    .kpr-hybrid-bestsellers::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #2980b9 0px,
        #2980b9 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-hybrid-bestsellers .section-heading {
      background: linear-gradient(45deg, #2980b9, #3498db);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .kpr-hybrid-bestsellers .section-heading::after {
      content: 'üèÜ';
      -webkit-text-fill-color: #2980b9;
    }

    .kpr-hybrid-bestsellers .section-description {
      color: #1f4e79;
    }

    .kpr-hybrid-bestsellers .product-card-wrapper {
      position: relative;
    }

    .hybrid-bestseller {
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 10;
      background: linear-gradient(45deg, #2980b9, #3498db, #f39c12);
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(41, 128, 185, 0.3);
      animation: shimmer 3s infinite;
    }

    @keyframes shimmer {
      0%, 100% { 
        background: linear-gradient(45deg, #2980b9, #3498db, #f39c12);
      }
      50% { 
        background: linear-gradient(45deg, #3498db, #f39c12, #2980b9);
      }
    }

    .kpr-hybrid-bestsellers .product-card {
      border-color: #5dade2;
      background: linear-gradient(145deg, #ffffff, #f8fbff);
      position: relative;
      overflow: hidden;
    }

    .kpr-hybrid-bestsellers .product-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(41, 128, 185, 0.15), transparent);
      transition: left 0.6s ease;
    }

    .kpr-hybrid-bestsellers .product-card:hover::before {
      left: 100%;
    }

    .kpr-hybrid-bestsellers .product-card:hover {
      border-color: #2980b9;
      box-shadow: 0 12px 32px rgba(41, 128, 185, 0.25);
    }

    .kpr-hybrid-bestsellers .button--primary {
      background: linear-gradient(45deg, #2980b9, #3498db);
      border-color: #2980b9;
    }

    .kpr-hybrid-bestsellers .button--primary:hover {
      background: linear-gradient(45deg, #1f618d, #2980b9);
      border-color: #1f618d;
    }

    .bestsellers-grid {
      position: relative;
    }

    .bestsellers-grid::before {
      content: 'üî• Trending Hybrid Designs üî•';
      position: absolute;
      top: -40px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(45deg, #2980b9, #3498db);
      color: white;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(41, 128, 185, 0.3);
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateX(-50%) translateY(0px); }
      50% { transform: translateX(-50%) translateY(-3px); }
    }

    @media (max-width: 768px) {
      .bestsellers-grid::before {
        font-size: 0.8rem;
        padding: 6px 16px;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Hybrid II - Best Sellers",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hybrid Best Sellers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The most popular hybrid designs that perfectly balance traditional elegance with modern functionality."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Hybrid Best Sellers"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Hybrid II - Best Sellers"
    }
  ]
}
{% endschema %}
<!-- sections/kpr-traditional-iii.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-traditional-iii"
  data-concept="traditional"
  class="kpr-concept-section kpr-traditional-section kpr-traditional-recommended color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid recommended-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="recommended-badge">
              <span>Expert Pick</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
            {% if section.settings.show_recommendation_reason %}
              <div class="recommendation-reason">
                <strong>Why we recommend:</strong> Perfect blend of classic design and modern functionality
              </div>
            {% endif %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="recommended-badge">
                <span>Expert Pick</span>
              </div>
              {% render 'product-card-placeholder' %}
              {% if section.settings.show_recommendation_reason %}
                <div class="recommendation-reason">
                  <strong>Why we recommend:</strong> Perfect blend of classic design and modern functionality
                </div>
              {% endif %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="recommended-badge">
              <span>Expert Pick</span>
            </div>
            {% render 'product-card-placeholder' %}
            {% if section.settings.show_recommendation_reason %}
              <div class="recommendation-reason">
                <strong>Why we recommend:</strong> Perfect blend of classic design and modern functionality
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary">
          {{ section.settings.button_label | default: 'View All Recommendations' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Traditional Recommended specific styling -->
  <style>
    .kpr-traditional-recommended {
      background: linear-gradient(135deg, #f8f5f0 0%, #f0e8d8 100%);
      border-top: 3px solid #cd853f;
      position: relative;
    }

    .kpr-traditional-recommended::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: repeating-linear-gradient(
        90deg,
        #cd853f 0px,
        #cd853f 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .kpr-traditional-recommended .section-heading {
      color: #cd853f;
    }

    .kpr-traditional-recommended .section-heading::after {
      content: '‚≠ê';
    }

    .kpr-traditional-recommended .section-description {
      color: #a0652a;
    }

    .kpr-traditional-recommended .product-card-wrapper {
      position: relative;
    }

    .recommended-badge {
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 10;
      background: linear-gradient(45deg, #cd853f, #f4a460);
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(205, 133, 63, 0.3);
      transform: rotate(-5deg);
    }

    .kpr-traditional-recommended .product-card {
      border-color: #deb887;
      background: #fefcf9;
      position: relative;
      overflow: visible;
    }

    .kpr-traditional-recommended .product-card:hover {
      border-color: #cd853f;
      box-shadow: 0 8px 24px rgba(205, 133, 63, 0.2);
    }

    .recommendation-reason {
      background: #fff8f0;
      border: 1px solid #deb887;
      border-radius: 8px;
      padding: 12px;
      margin-top: 12px;
      font-size: 0.85rem;
      line-height: 1.4;
      color: #8b5a2b;
    }

    .recommendation-reason strong {
      color: #cd853f;
      display: block;
      margin-bottom: 4px;
    }

    .kpr-traditional-recommended .button--primary {
      background: linear-gradient(45deg, #cd853f, #f4a460);
      border-color: #cd853f;
    }

    .kpr-traditional-recommended .button--primary:hover {
      background: linear-gradient(45deg, #b8722a, #cd853f);
      border-color: #b8722a;
    }

    .recommended-grid {
      position: relative;
    }

    .recommended-grid::before {
      content: 'üéØ Curated by Experts üéØ';
      position: absolute;
      top: -40px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(45deg, #cd853f, #f4a460);
      color: white;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(205, 133, 63, 0.3);
    }

    @media (max-width: 768px) {
      .recommended-grid::before {
        font-size: 0.8rem;
        padding: 6px 16px;
      }

      .recommendation-reason {
        font-size: 0.8rem;
        padding: 10px;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Traditional III - Recommended",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Traditional Recommendations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our design experts have carefully selected these traditional pieces for their exceptional quality and timeless appeal."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_recommendation_reason",
      "label": "Show Recommendation Reason",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Recommendations"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Traditional III - Recommended"
    }
  ]
}
{% endschema %}
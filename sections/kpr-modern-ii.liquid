<!-- sections/kpr-modern-ii.liquid -->
<kpr-concept-section 
  data-section-id="{{ section.id }}"
  data-section-type="kpr-modern-ii"
  data-concept="modern"
  class="kpr-concept-section kpr-modern-section kpr-modern-bestsellers color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    display: none;
  "
>
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="products-grid bestsellers-grid modern-bestsellers-grid">
      {% if section.settings.collection %}
        {% assign collection = collections[section.settings.collection] %}
        {% assign product_limit = section.settings.products_to_show %}
        
        {% for product in collection.products limit: product_limit %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge modern-bestseller">
              <span>Top Pick</span>
            </div>
            <div class="performance-indicator">
              <div class="performance-bar">
                <div class="performance-fill" style="width: {{ 85 | plus: forloop.index | modulo: 15 }}%"></div>
              </div>
              <span class="performance-label">Performance</span>
            </div>
            {% render 'product-card',
              product_card_product: product,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              image_ratio: section.settings.image_ratio,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </div>
        {% else %}
          {% for i in (1..product_limit) %}
            <div class="product-card-wrapper">
              <div class="bestseller-badge modern-bestseller">
                <span>Top Pick</span>
              </div>
              <div class="performance-indicator">
                <div class="performance-bar">
                  <div class="performance-fill" style="width: {{ 85 | plus: i | modulo: 15 }}%"></div>
                </div>
                <span class="performance-label">Performance</span>
              </div>
              {% render 'product-card-placeholder' %}
            </div>
          {% endfor %}
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card-wrapper">
            <div class="bestseller-badge modern-bestseller">
              <span>Top Pick</span>
            </div>
            <div class="performance-indicator">
              <div class="performance-bar">
                <div class="performance-fill" style="width: {{ 85 | plus: i | modulo: 15 }}%"></div>
              </div>
              <span class="performance-label">Performance</span>
            </div>
            {% render 'product-card-placeholder' %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection %}
      <div class="section-footer">
        <a href="{{ collections[section.settings.collection].url }}" class="button button--primary modern-button">
          {{ section.settings.button_label | default: 'View All Modern Best Sellers' }}
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Modern Best Sellers specific styling -->
  <style>
    .kpr-modern-bestsellers {
      background: linear-gradient(135deg, #f4f6f8 0%, #e8ecf0 50%, #dde1e6 100%);
      border-top: 3px solid #34495e;
      position: relative;
    }

    .kpr-modern-bestsellers::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, #34495e, #2c3e50, #34495e);
    }

    .kpr-modern-bestsellers .section-heading {
      color: #34495e;
    }

    .kpr-modern-bestsellers .section-heading::after {
      content: 'ðŸ“Š';
      filter: grayscale(40%);
    }

    .kpr-modern-bestsellers .section-description {
      color: #4a5568;
    }

    .kpr-modern-bestsellers .product-card-wrapper {
      position: relative;
    }

    .modern-bestseller {
      position: absolute;
      top: 15px;
      right: 15px;
      z-index: 10;
      background: linear-gradient(135deg, #e74c3c, #c0392b);
      color: white;
      padding: 6px 14px;
      border-radius: 0;
      font-size: 0.7rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 50%, calc(100% - 8px) 100%, 0 100%);
      min-width: 70px;
      text-align: center;
      animation: modernPulse 2s infinite;
    }

    @keyframes modernPulse {
      0%, 100% { 
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        transform: scale(1);
      }
      50% { 
        background: linear-gradient(135deg, #c0392b, #e74c3c);
        transform: scale(1.05);
      }
    }

    .performance-indicator {
      position: absolute;
      bottom: 15px;
      left: 15px;
      right: 15px;
      z-index: 10;
      background: rgba(255, 255, 255, 0.95);
      padding: 8px;
      border-left: 3px solid #3498db;
    }

    .performance-bar {
      width: 100%;
      height: 4px;
      background: #ecf0f1;
      border-radius: 2px;
      overflow: hidden;
      margin-bottom: 4px;
    }

    .performance-fill {
      height: 100%;
      background: linear-gradient(90deg, #3498db, #2ecc71);
      border-radius: 2px;
      transition: width 1s ease-in-out;
      animation: fillAnimation 2s ease-in-out;
    }

    @keyframes fillAnimation {
      0% { width: 0%; }
      100% { width: var(--final-width, 90%); }
    }

    .performance-label {
      font-size: 0.7rem;
      color: #34495e;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .kpr-modern-bestsellers .product-card {
      border-color: #bdc3c7;
      background: #ffffff;
      position: relative;
    }

    .kpr-modern-bestsellers .product-card::before {
      background: linear-gradient(90deg, #34495e, #2c3e50, #34495e);
    }

    .kpr-modern-bestsellers .product-card:hover {
      border-color: #34495e;
      box-shadow: 0 20px 40px rgba(52, 73, 94, 0.2);
    }

    .kpr-modern-bestsellers .modern-button {
      background: linear-gradient(135deg, #34495e, #2c3e50);
      border-color: #34495e;
    }

    .kpr-modern-bestsellers .modern-button:hover {
      background: linear-gradient(135deg, #2c3e50, #1a252f);
      border-color: #2c3e50;
    }

    .modern-bestsellers-grid {
      position: relative;
    }

    .modern-bestsellers-grid::before {
      content: 'PERFORMANCE LEADERS';
      position: absolute;
      top: -50px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(135deg, #34495e, #2c3e50);
      color: white;
      padding: 10px 25px;
      font-size: 0.8rem;
      font-weight: 500;
      letter-spacing: 2px;
      clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0 100%);
      min-width: 220px;
      text-align: center;
    }

    .modern-bestsellers-grid::after {
      content: '';
      position: absolute;
      top: -60px;
      left: 50%;
      transform: translateX(-50%);
      width: 250px;
      height: 2px;
      background: linear-gradient(90deg, transparent, #34495e, transparent);
    }

    @media (max-width: 768px) {
      .modern-bestsellers-grid::before {
        font-size: 0.7rem;
        padding: 8px 20px;
        min-width: 180px;
      }

      .performance-indicator {
        bottom: 10px;
        left: 10px;
        right: 10px;
        padding: 6px;
      }

      .performance-label {
        font-size: 0.65rem;
      }
    }
  </style>
</kpr-concept-section>

{% schema %}
{
  "name": "Modern II - Best Sellers",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Modern Best Sellers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "High-performance modern designs that have proven their excellence in real-world applications."
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "label": "Enable Quick Add",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Modern Best Sellers"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Modern II - Best Sellers"
    }
  ]
}
{% endschema %}